
pipeline {
    agent any

    stages {
        stage('Check Node') {
            steps {
                bat 'node -v'
                bat 'npm -v'
            }
        }
        stage('Build') {
           steps {
           bat 'echo Build OK'
    }
}


        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        
        }

        stage('Fin') {
            steps {
                echo 'Pipeline Node.js terminé avec succès ✅'
            }
        }
    }
}
