pipeline {
    agent any
    tools {
        // Remplacez 'NodeJS 18' par le nom que vous avez donné à votre installation Node dans Jenkins config
        nodejs 'NodeJS 18' 
    }
    stages {
        stage('Installation des dépendances') {
            steps {
                sh 'npm install' // Exécute 'npm install' pour télécharger les paquets nécessaires
            }
        }
        stage('Build/Test') {
            steps {
                // Remplacez 'test' par 'build' si vous avez un script de build, ou ajoutez les deux étapes séparément
                sh 'npm test' 
            }
        }
        stage('Bonjour Final') {
            steps {
                echo 'Pipeline Node.js terminé avec succès !'
            }
        }
    }
}
