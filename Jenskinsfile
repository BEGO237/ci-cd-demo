
pipeline {
    agent any

    stages {
        stage('Check Node') {
            steps {
                bat 'node -v'
                bat 'npm -v'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build / Test') {
            steps {
                bat 'npm test'
            }
        }

        stage('Fin') {
            steps {
                echo 'Pipeline Node.js terminé avec succès ✅'
            }
        }
    }
}
